---
import type { MenuItem } from '../types';
import MobileMenuItem from './MobileMenuItem.astro';

interface Props {
  menuItems: MenuItem[];
  language: string;
}

const { menuItems, language } = Astro.props;
---

<div
  id="mobile-menu"
  class="md:hidden hidden bg-[var(--color-bg-base)] border-t border-[var(--color-border)]"
>
  <div class="container mx-auto px-4 py-3 space-y-4">
    {menuItems.map((item) => (
      <MobileMenuItem item={item} language={language} />
    ))}
  </div>
</div>
